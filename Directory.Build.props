<Project>
    <PropertyGroup>
        <Nullable>enable</Nullable>
        <LangVersion>Latest</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>

        <Version>1.0.0</Version>
        <Copyright>Copyright Â© ds5678</Copyright>
        <Authors>ds5678</Authors>

        <UseArtifactsOutput>true</UseArtifactsOutput>
        
        <!-- Ensures project references copy native binaries after build. Not necessary after MSBuild 17.0 but kept for backwards compatibility
        https://github.com/dotnet/msbuild/issues/1054#issuecomment-847959047 
        NOTE: Make sure to use IncludeAssets="all" or at least IncludeAssets="native"; With project refs, native assets are not included by default
        -->
        <MSBuildCopyContentTransitively>true</MSBuildCopyContentTransitively>

        <TargetFramework>net10.0</TargetFramework>

        <UseCurrentRuntimeIdentifier Condition="'$(RuntimeIdentifier)' == ''">true</UseCurrentRuntimeIdentifier>

        <!-- Ensure every project, including tests, has a RID unless explicitly set -->
        <RuntimeIdentifier Condition="'$(RuntimeIdentifier)' == '' AND '$(PackAsTool)' != 'true'">$(NETCoreSdkRuntimeIdentifier)</RuntimeIdentifier>
    </PropertyGroup>
</Project>